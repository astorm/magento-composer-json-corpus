{
    "name":        "smaex/sitemap",
    "description": "Adds the home page to the XML sitemap in Magento 2.",
    "type":        "magento2-module",
    "version":     "1.0.0",
    "license":     "MIT",
    "keywords":
    [
        "magento", "seo", "sitemap"
    ],
    "require":
    {
        "php":                    "^7.1",
        "magento/framework":      "^102.0",
        "magento/module-cms":     "^103.0",
        "magento/module-sitemap": "^100.3",
        "magento/module-store":   "^101.0"
    },
    "require-dev":
    {
        "phpunit/phpunit": "^7.0"
    },
    "autoload":
    {
        "files":
        [
            "registration.php"
        ],
        "psr-4":
        {
            "Smaex\\Sitemap\\": ""
        }
    }
}
