{
    "name": "clawrock/magento2-twig-engine",
    "description": "Magento 2 Twig Template Engine",
    "type": "magento2-module",
    "license": [
        "OSL-3.0",
        "AFL-3.0"
    ],
    "require": {
        "magento/framework": "~101.0|~102.0",
        "magento/module-store": "~100.2|~101.0",
        "twig/twig": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "^3.3",
        "phpmd/phpmd": "^2.6",
        "sebastian/phpcpd": "^3.0",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "ClawRock\\TwigEngine\\": ""
        }
    }
}

